<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CynVee_Hash_Checker.MainWindow"
        Title="CynVee_Hash_Checker">
    <Grid ColumnDefinitions="Auto,*,Auto" RowDefinitions="Auto,*, *, *, *, Auto">
        <Button x:Name="selectFileButton" Click="selectFileButton_Click" Content="Select File" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="0"/>

        <TextBlock Text="SHA-1" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1"/>
        <TextBox x:Name="sha1TextBox" AcceptsReturn="False" MaxLines="1" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="1"/>
        <Button x:Name="sha1Button" Click="sha1Button_Click" Content="Paste" Grid.Column="2" Grid.Row="1"/>

        <TextBlock Text="SHA-256" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2"/>
        <TextBox x:Name="sha256TextBox" AcceptsReturn="False" MaxLines="1" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="2"/>
        <Button Click="sha256Button_Click" Content="Paste" Grid.Column="2" Grid.Row="2"/>

        <TextBlock Text="SHA-512" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="3"/>
        <TextBox x:Name="sha512TextBox" AcceptsReturn="False" MaxLines="1" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="3"/>
        <Button Click="sha512Button_Click" Content="Paste" Grid.Column="2" Grid.Row="3"/>

        <TextBlock Text="MD5" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="0" Grid.Row="4"/>
        <TextBox x:Name="md5TextBox" AcceptsReturn="False" MaxLines="1" VerticalAlignment="Stretch" Grid.Column="1" Grid.Row="4"/>
        <Button Click="md5Button_Click" Content="Paste" Grid.Column="2" Grid.Row="4"/>

        <Button x:Name="calculateButton" Click="calculateButton_Click" Content="Calculate" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Column="1" Grid.Row="5"/>
    </Grid>
</Window>
